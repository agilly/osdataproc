[Unit]
Description=Spark Master
After=network.target

[Service]
Environment=SPARK_HOME={{ spark_home }}
WorkingDirectory={{ spark_home }}
ExecStart={{ spark_home }}/sbin/start-history-server.sh
User={{ user }}
KillMode=process
KillSignal=SIGINT
Restart=on-failure

[Install]
WantedBy=multi-user.target
